@model IEnumerable<CarWorkshop.Application.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "Lista warsztatów";
}

<h2 class="mb-4">Lista warsztatów</h2>

<p>
    <a asp-action="Create" class="btn btn-secondary">Stwórz nowy</a>
</p>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var workshop in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@workshop.Name</h5>
                    <p class="card-text flex-grow-1">@workshop.Description</p>
                    <div class="mt-3">
                        <a class="btn btn-primary btn-sm me-2" asp-controller="CarWorkshop" asp-action="Details" asp-route-encodedName="@workshop.Name">Details</a>
                        @if (workshop.IsEditable)
                        {
                            <a class="btn btn-secondary btn-sm" asp-controller="CarWorkshop" asp-action="Edit" asp-route-encodedName="@workshop.Name">Edit</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
